<% include partials/head.ejs %>

<body>
<div class="col-sm-8 col-sm-offset-2">
    <div class="text-center">
        <h1 class=" fa fa-user"> Profile</h1><br>
        <!--<span><strong>user token</strong>: <%= user.accessToken %></span><br>-->
        <span class="fa fa-sign-out"><a href="/login-promo"> Sign out</a></span>
        <hr>

        <div class="jumbotron">

            <% if (typeof user.local != 'undefined') { %>
                <img src="https://avatars.io/gravatar/<%= user.local.email %>/140" class="img-circle"><br>
                <strong>email</strong>: <%= user.local.email %><br>
            <% } %>

            <% if (typeof user.facebook != 'undefined') { %>
                <h2 class="fa fa-facebook"> Facebook</h2><br>
                <img src="https://avatars.io/gravatar/<%= user.facebook.emails[0].value %>/140" class="img-circle"><br>
                <strong>id</strong>: <%= user.facebook.id %><br>
                <strong>name</strong>: <%= user.facebook.name.givenName %> <%= user.facebook.name.familyName %><br>
                <strong>email</strong>: <%= user.facebook.emails[0].value %><br>
                <strong>gender</strong>: <%= user.facebook.gender %>
            <% } %>

            <% if (typeof user.twitter != 'undefined') { %>
                <h2 class="fa fa-twitter"> Twitter</h2><br>
                <img src="https://avatars.io/twitter/<%= user.twitter.username %>" class="img-circle"><br>
                <strong>id</strong>: <%= user.twitter.id %><br>
                <strong>token</strong>: <%= user.accessToken %><br>
                <strong>username</strong>: <%= user.twitter.username %><br>
                <strong>displayName</strong>: <%= user.twitter.displayName %>
            <% } %>

            <% if (typeof user.google != 'undefined') { %>
                <h2 class="fa fa-google-plus"> Google</h2><br>
                <img src="https://avatars.io/gravatar/<%= user.google.email %>/140" class="img-circle"><br>
                <strong>id</strong>: <%= user.google.id %><br>
                <strong>token</strong>: <%= user.accessToken %><br>
                <strong>email</strong>: <%= user.google.email %><br>
                <strong>name</strong>: <%= user.google.name %>
            <% } %>
        </div>

    </div>
</div>
</body>
</html>